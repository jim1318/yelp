.container-fluid
  .jumbotron
    %h1.display-4= @business.name
    %h2 #{@business.average_rating.round(1)} / 5.0
    %hr.my-4
    %p= @business.address
    %br
    = link_to "Add New Review",  new_business_review_path(@business), class: "btn btn-primary"
  %h2 List of reviews - most recent first
  .business_list
    %ul
      - @business.reviews.each do |review|
        %li
          .card
            .card-block
              %h3.card-title #{review.rating.round(1)} / 5.0
              %hr
              %p.card-subtitle= review.review_text
              %hr
              %p.card_subtitle.inline-block Reviewer: 
              = link_to review.user.full_name, user_path(review.user), class: "inline-block"