.container
  .row.justify-content-center
    .col-sm-10.justify-content-center
      %img.mx-auto.d-block{ :src => "/images/yelp_logo.png", :alt => ""}
%nav.navbar.navbar-toggleable-sm.navbar-inverse.bg-inverse
  %button(class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
    %span.navbar-toggler-icon
  %a.navbar-brand{ :href => home_path } Home
  %div(class="collapse navbar-collapse" id="navbarSupportedContent")
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to "Businesses", home_path, class: "nav-link"  
      %li.nav-item
        = link_to "Recent", reviews_path, class: "nav-link"  
      - if logged_in?
        %li.nav-item
          = link_to "Add Business", new_business_path, class: "nav-link"   
        %li.nav-item
          = link_to "Sign Out", sign_out_path, class: "nav-link"     
      - else
        %li.nav-item
          = link_to "Sign In", sign_in_path, class: "nav-link"
        %li.nav-item
          = link_to "Register", register_path, class: "nav-link"

- if logged_in?
  %p #{current_user.full_name} - You are signed in
