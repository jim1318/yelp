.container
  .row.justify-content-center
    .col-sm-10.justify-content-center
      .card.formpretty
        .card-block
          %h1.card-title Sign In
          = form_tag sessions_path, method: "post", class: "sign_in" do
            %fieldset
              .form-group
                = label_tag :email, "Email Address"
                .row
                  .col-sm-4
                    = email_field_tag :email
              .form-group
                = label_tag :password
                .row
                  .col-sm-4
                    = password_field_tag :password
            %fieldset.form-group.action
              %input(type="submit" value="Sign In" class="btn btn-primary")