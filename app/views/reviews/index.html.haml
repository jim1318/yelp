.container
  .row
    .col-sm-10.offset-sm-1
      %h2 Most recent 5 reviews
      .business_list
        %ul
          - @reviews.each do |review|
            %li
              .card
                .card-block
                  %h3 #{review.rating.round(1)} / 5.0
                  %p= review.review_text
                  %p.inline-block Reviewer: 
                  = link_to review.user.full_name, user_path(review.user), class: "inline-block"